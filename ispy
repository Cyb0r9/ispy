Cyan="\033[0;36m"
Cafe="\033[0;33m"
Fiuscha="\033[0;35m"
blue="\033[1;34m"
nc="\e[0m"
#vars
n1="1"
n2="2"
n3="3"
n4="4"
n5="5"
n6="6"
n7="7"
