loc_ip=$(ip addr show wlan0 | awk '/inet / {print $2}' | cut -d/ -f 1)
#STARTUP
function banner(){

	echo -e "		$Cyan.___    ________________________.___."
	echo "		|   |  /   _____/\______   \__  |   |"
	echo "		|   |  \_____  \  |     ___//   |   |"
